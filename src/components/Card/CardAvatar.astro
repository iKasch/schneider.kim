---
export interface Props {
  avatar: string
  alt?: string
}

const { avatar, alt = "Kim Schneider" } = Astro.props
---

<img src={avatar} alt={alt} class="avatar" />

<style>
  .avatar {
    --avatarSize: 150px;
    width: var(--avatarSize);
    height: var(--avatarSize);
    border-radius: 100%;
    margin-bottom: var(--mainSpacer);
  }
</style>
